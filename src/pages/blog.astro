---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';

const posts = await getCollection('posts');
---

<Layout title="Blog | Ugur Sadiklar">
	<h1>Blog</h1>
	<ul>
		{
			posts.map((post) => (
				<li>
					<a href={`/posts/${post.slug}`}>{post.data.title}</a>
				</li>
			))
		}
	</ul>
</Layout>
